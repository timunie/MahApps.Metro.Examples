<mah:MetroWindow x:Class="HamburgerMenuAutoPaneOpening.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:HamburgerMenuAutoPaneOpening"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 Title="MainWindow"
                 Width="800"
                 Height="450"
                 mc:Ignorable="d">
    <mah:HamburgerMenu Content="{Binding RelativeSource={RelativeSource Mode=Self}, Path=SelectedItem}">
        <mah:HamburgerMenu.ItemsSource>
            <mah:HamburgerMenuItemCollection>
                <mah:HamburgerMenuIconItem Icon="A" Label="Test" Tag="Test" />
            </mah:HamburgerMenuItemCollection>
        </mah:HamburgerMenu.ItemsSource>
        
    </mah:HamburgerMenu>
</mah:MetroWindow>
